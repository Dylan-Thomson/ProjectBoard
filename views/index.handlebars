<div class="container">
    <div class="header">
        <h1 class="text-center">Project Board</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>To Do</h2>
            <ul class="list-unstyled">
                {{#each todos}}
                    {{#unless completed}}
                        {{> todos/todo-block completed=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Completed</h2>
            <ul class="list-unstyled">
                {{#each todos}}
                    {{#if completed}}
                        {{> todos/todo-block completed=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>Add New To Do</h2>
    <form action="/api/todos" method="POST">
        <div class="form-group">
            <input class="form-control" name="todo" type="text">
        </div>
        <button type="submit" value="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


