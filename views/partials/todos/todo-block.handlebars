<li class="my-1">
    {{#if completed}}
        <div class="bg-white p-4 m-4 complete">
            {{id}}. {{task}} 
        </div>
    {{else}}
        <div class="bg-white p-4 m-4 todo" data-id="{{id}}" data-completed="{{completed}}">
            {{id}}. {{task}} <span class="float-right"><i class="complete-task fas fa-2x fa-check-square"></i></span>
        </div>
    {{/if}}
</li>
